{
  "presets": [
    [
      "env",
      {
        "targets": {
          "browsers": [
            ">5%",
            "last 2 versions"
          ],
          "uglify": true
        },
        "modules": false,
        "loose": true
      }
    ],
    "react"
  ],
  "plugins": [
    "transform-class-properties",
    "transform-object-rest-spread"
  ],
  "env": {
    "test": {
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    },
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    }
  }
}
